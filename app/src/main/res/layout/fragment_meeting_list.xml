<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dongdao.meetingmanager.activity.MeetingActivity"
    android:background="#e7e7e7"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@mipmap/top_01">
        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginRight="7dp"
            android:textSize="24px"
            android:id="@+id/txtclock"
            android:textColor="#333333"
            android:format12Hour="yyyy-MM-dd EEEE  aah:mm:ss"
            android:format24Hour="yyyy-MM-dd EEEE  aah:mm:ss"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="24px"
            android:text="晴天 23度"
            android:layout_toStartOf="@+id/txtclock"
            android:layout_marginRight="10dp"
            android:id="@+id/weather"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:background="@mipmap/yellowleft"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="7dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/myviewflipper"
                android:flipInterval="3000"
                android:inAnimation="@android:anim/fade_in"
                android:outAnimation="@android:anim/fade_out">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/flipper_03"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/ic_launcher"/>
            </ViewFlipper>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Successful examples"
                    android:textSize="26px"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/successfulexamples"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成功案例"
                    android:textSize="26px"
                    android:layout_below="@+id/successfulexamples"
                    android:layout_marginLeft="5dp"
                    android:textColor="#e39718"/>
                <LinearLayout
                    android:layout_width="218dp"
                    android:layout_height="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"></LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:orientation="vertical"
                android:background="#ffffff"
                android:layout_weight="1.8">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@mipmap/meetingroom_03"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meeting informations"
                        android:textSize="26px"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/meetinginformations"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="会议信息"
                        android:textSize="26px"
                        android:layout_below="@+id/meetinginformations"
                        android:layout_marginLeft="5dp"
                        android:textColor="#e39718"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="7dp"
                        android:id="@+id/nowbg"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="15dp"
                            android:textColor="#ffffff"
                            android:gravity="center|bottom"
                            android:id="@+id/nowroom"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="12dp"
                            android:textColor="#ffffff"
                            android:gravity="center|bottom"
                            android:id="@+id/nowtheme"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="12dp"
                            android:textColor="#ffffff"
                            android:gravity="center"
                            android:id="@+id/nowtime"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="12dp"
                            android:textColor="#ffffff"
                            android:gravity="center|top"
                            android:id="@+id/nowuser"
                           />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="2dp"
                    android:layout_weight="1.3"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#e7e7e7"
                        android:id="@+id/garyline"
                        android:orientation="horizontal"
                        ></LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:orientation="horizontal"
                        android:layout_below="@+id/garyline"
                        android:id="@+id/listtitle">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="会议室"
                            android:textSize="20px"
                            android:textColor="#333333"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.2"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="议题"
                            android:textSize="20px"
                            android:textColor="#333333"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="日期"
                            android:textSize="20px"
                            android:textColor="#333333"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="时间"
                            android:textSize="20px"
                            android:textColor="#333333"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="组织者"
                            android:textSize="20px"
                            android:textColor="#333333"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#e7e7e7"
                        android:id="@+id/garyline2"
                        android:orientation="horizontal"
                        android:layout_below="@+id/listtitle"></LinearLayout>
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:id="@+id/meetings"
                        android:divider="@null"
                        android:scrollbars="vertical"
                        android:layout_below="@+id/garyline2"
                        android:layout_above="@+id/bottom"
                       ></ListView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#e7e7e7"
                        android:layout_below="@id/meetings"></LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/bottom"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="left|center_vertical"
                            android:layout_alignParentLeft="true"
                            android:text="提示信息：302会议室正在使用中"
                            android:textSize="18px"
                            android:textColor="#333333"
                            android:id="@+id/tips"/>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
